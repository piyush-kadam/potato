platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end
  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting it and running flutter pub get again."
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Fix HomeWidget dependency BEFORE CocoaPods analyzes
begin
  require 'xcodeproj'
  project_path = File.join(__dir__, 'Runner.xcodeproj')
  project = Xcodeproj::Project.open(project_path)
  
  runner_target = project.targets.find { |t| t.name == 'Runner' }
  widget_target = project.targets.find { |t| t.name == 'HomeWidget' }
  
  if runner_target && widget_target
    existing = runner_target.dependencies.find { |dep| dep.target == widget_target }
    unless existing
      puts "üîß Adding HomeWidget dependency to Runner..."
      runner_target.add_dependency(widget_target)
      project.save
      puts "‚úÖ Done!"
    end
  end
rescue => e
  puts "‚ö†Ô∏è  Warning: Could not fix dependency automatically: #{e.message}"
end

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
  
  target 'HomeWidget' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end